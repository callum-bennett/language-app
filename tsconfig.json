{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@navigation": ["./navigation"],
      "@navigation/*": ["./navigation/*"],
      "@screens": ["./screens"],
      "@screens/*": ["./screens/*"],
      "@store": ["./store"],
      "@store/*": ["./store/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js"]
}
